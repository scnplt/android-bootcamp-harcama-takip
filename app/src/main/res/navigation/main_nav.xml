<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_nav"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="dev.sertan.android.harcamatakip.view.ui.SplashFragment"
        android:label="SplashFragment">
        <action
            android:id="@+id/action_splash_to_home"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/main_nav"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_splash_to_onboarding"
            app:destination="@id/onboardingFragment"
            app:popUpTo="@id/main_nav"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="dev.sertan.android.harcamatakip.view.ui.HomeFragment"
        android:label="HomeFragment">
        <action
            android:id="@+id/action_home_to_addExpense"
            app:destination="@id/addExpenseFragment" />
        <action
            android:id="@+id/action_home_to_expenseDetail"
            app:destination="@id/expenseDetailFragment" />
        <action
            android:id="@+id/action_home_to_profileSettings"
            app:destination="@id/profileSettingsFragment" />
    </fragment>
    <fragment
        android:id="@+id/addExpenseFragment"
        android:name="dev.sertan.android.harcamatakip.view.ui.AddExpenseFragment"
        android:label="AddExpenseFragment" />
    <fragment
        android:id="@+id/expenseDetailFragment"
        android:name="dev.sertan.android.harcamatakip.view.ui.ExpenseDetailFragment"
        android:label="ExpenseDetailFragment">
        <argument
            android:name="expense"
            app:argType="dev.sertan.android.harcamatakip.data.model.Expense" />
    </fragment>
    <fragment
        android:id="@+id/profileSettingsFragment"
        android:name="dev.sertan.android.harcamatakip.view.ui.SettingsFragment"
        android:label="ProfileSettingsFragment" />
    <fragment
        android:id="@+id/onboardingFragment"
        android:name="dev.sertan.android.harcamatakip.view.ui.OnboardingFragment"
        android:label="OnboardingFragment">
        <action
            android:id="@+id/action_onboarding_to_home"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/main_nav"
            app:popUpToInclusive="true" />
    </fragment>
</navigation>