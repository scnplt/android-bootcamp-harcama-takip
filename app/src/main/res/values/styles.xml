<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Chip -->
    <style name="Widget.App.Chip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipIconTint">?attr/colorOnPrimary</item>
        <item name="chipBackgroundColor">@drawable/color_chip_choice</item>
        <item name="checkedIconVisible">false</item>
        <item name="android:textColor">@drawable/color_text_chip_choice</item>
        <item name="chipStrokeWidth">2dp</item>
        <item name="chipStrokeColor">?attr/itemTextColor</item>
    </style>

    <!-- Card -->
    <style name="Widget.App.MaterialCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">4dp</item>
    </style>

    <!-- TabLayout -->
    <style name="Widget.App.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabBackground">@drawable/ic_layout_tab</item>
        <item name="tabIndicator">@null</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="tabRippleColor">@android:color/transparent</item>
    </style>
</resources>